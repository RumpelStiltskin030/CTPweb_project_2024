@model HomeWorks.ViewModel.MemberProductsViewModel

<!DOCTYPE html>
<html>
<head>
    <title>會員資訊</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .profile-card {
            border: 1px solid #ddd;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .profile-img {
            width: 120px;
            height: 120px;
            object-fit: cover;
        }

        .custom-card {
            display: flex;
            flex-direction: column;
            height: 600px; /* 固定卡片高度 */
            border: 1px solid #ddd; /* 添加邊框 */
            border-radius: 0.5rem; /* 圓角邊框 */
            overflow: hidden; /* 確保內容不超出卡片範圍 */
        }

        .card-img-top {
            height: 300px; /* 設置圖片的高度 */
            object-fit: cover; /* 保持圖片的比例並填滿卡片 */
        }

        .card-body {
            flex: 1;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>會員資訊</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="profile-card card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <!-- 左側欄位 -->
                            <div class="col-12 col-lg-3 d-flex justify-content-center align-items-center p-3">
                                <a target="_blank" class="link-primary d-flex align-items-center justify-content-center" href="@(!string.IsNullOrEmpty(Model.Member.PhotoPath) ? Model.Member.PhotoPath : "/photo/ready.jpg")">
                                    <img src="@(!string.IsNullOrEmpty(Model.Member.PhotoPath) ? Model.Member.PhotoPath : "/photo/ready.png")" alt="會員照片" class="profile-img rounded-circle">
                                </a>
                            </div>

                            <!-- 會員資訊欄位 -->
                            <div class="col-12 col-lg-6 d-flex flex-column justify-content-center p-3">
                                <div class="mb-2">
                                    <span class="font-weight-bold" style="font-size: 1.5rem;">
                                        @Model.Member.MeName
                                    </span>
                                </div>
                                <div class="small text-muted">
                                    @Model.Member.MeEmail
                                    <a class="text-muted ml-1" href="@Url.Action("Edit", "Me")">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                </div>
                                <div class="small text-muted">
                                    @Model.Member.MeTel
                                    <a class="text-muted ml-1" href="@Url.Action("Edit", "Me")">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                </div>
                            </div>

                            <!-- 右側欄位 -->
                            <div class="col-12 col-lg-3 d-flex justify-content-end align-items-center p-3">
                                <!-- 使用 ml-2 來添加一些左邊距，或者根據需要調整 -->
                                <a class="ml-2 btn btn-primary btn-order" @* asp-controller="He" asp-action="OrderHe" asp-route-id="@Model.Member.MeId" *@>我要委託</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 詳情模態框 -->
    <div class="modal fade" id="OrderModal" tabindex="-1" aria-labelledby="OrderModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="OrderModalLabel">我要委託</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modal-body-content">
                    <!-- 詳情內容會載入到這裡 -->
                </div>
            </div>
        </div>
    </div>


        <!-- 產品列表 -->
        <h2 class="mt-4">@Model.Member.MeName 的產品</h2>
        <div class="row">
            @foreach (var item in Model.Products)
            {
                if (item.Product.Status != "D") 
                    { 
                            string src = "";
                            if (item.ProductDetail.Count > 0)
                            {
                                src = item.ProductDetail[0].Fieldpath;
                            }
                            <div class="col-md-4 mb-4">
                                <div class="card custom-card">
                                    <img src="@src" class="card-img-top" alt="產品圖片">
                                    <div class="card-body">
                                        @if (item.Product.Status == "A")
                                        {
                                            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Product.ProName)</h5>
                                        }
                                        else
                                        {
                                            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Product.ProName) (已訂購)</h5>
                                        }
                                        <p class="card-text">@Html.DisplayFor(modelItem => item.Product.ProPrice)</p>
                                            <a  asp-controller="Pro" asp-action="Details" asp-route-id="@item.Product.ProId" class="btn btn-primary">預覽</a>
                                        @if (item.Product.Status == "A")
                                        {
                                            <a asp-controller="Pro" asp-action="Orders" asp-route-id="@item.Product.ProId" class="btn btn-success">購買</a>
                                        }
                                    </div>
                    </div>
                </div>

                <style>
                    .custom-card {
                        width: 100%;
                        height: 600px; /* 固定卡片高度 */
                    }

                        .custom-card .card-img-top {
                            height: 450px; /* 設置圖片的高度 */
                            object-fit: cover; /* 保持圖片的比例並填滿卡片 */
                        }
                </style>
                }
            }
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).on('click', '.btn-order', function () {
                var MeId = @Model.Member.MeId;
                var url = '@Url.Action("OrderHe", "He")' + '/' + MeId;
                $('#modal-body-content').load(url);
                $('#OrderModal').modal('show');
            });
        </script>
    }
</body>
</html>
