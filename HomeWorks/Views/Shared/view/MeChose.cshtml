@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    // 獲取用戶權限代號和ID
    string userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
    string id = HttpContextAccessor.HttpContext.Session.GetString("LoggedInID");
    var myParam = ViewData["TEST"] as string;

}
<p>参数值是: @myParam</p>
<div class="container-fluid">
    <nav class="nav flex-column">
        <ul class="nav-list">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Me" asp-action="Detail">個人資料</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Me" asp-action="Edit" asp-route-id="@id">帳戶設置</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Me" asp-action="OrderHis" asp-route-id="@id">我的訂單</a>
            </li>
            @if (userRole == "B")
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Me" asp-action="OrderSale" asp-route-id="@id">管理訂單</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">我的商品</a>
                </li>
            }
        </ul>
    </nav>
</div>

<style>
    .nav-list {
        padding-left: 0; /* 去掉左边的默认内边距 */
        list-style: none; /* 去掉列表的默认样式 */
    }

    .nav-item {
        margin-bottom: 1rem; /* 增加底部间距以分隔导航项 */
    }

    .nav-link {
        display: block; /* 使链接充满父容器宽度 */
        padding: 0.5rem 1rem; /* 添加内边距以增加点击区域 */
        border-radius: 0.25rem; /* 添加圆角 */
        transition: background-color 0.2s, color 0.2s; /* 添加过渡效果 */
        color: #343a40; /* 设置文本颜色 */
    }

        .nav-link:hover, .nav-link:focus {
            background-color: #e9ecef; /* 悬停和焦点时背景颜色 */
            color: #0056b3; /* 悬停和焦点时文本颜色 */
        }
</style>
