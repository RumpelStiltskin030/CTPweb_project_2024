@model HomeWorks.Models.Order

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="mb-4">確認寄出時間</h2>
            <form asp-controller="Me" asp-action="Sale" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="OrdId" />

                <div class="mb-3">
                    <label asp-for="DateLine" class="form-label"></label>
                    <!-- 顯示預設日期值 -->
                    <input asp-for="DateLine" class="form-control" type="date" />
                    <span asp-validation-for="DateLine" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <input type="submit" value="儲存" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
