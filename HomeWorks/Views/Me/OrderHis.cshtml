@model IEnumerable<HomeWorks.Models.Order>

<div class="container mt-4">
    <div class="row">
        <!-- 側邊選單 -->
        <div class="col-12 col-md-3 col-lg-2">
            @await Html.PartialAsync("~/Views/Shared/view/MeChose.cshtml")
        </div>

        <div class="col-12 col-md-9 col-lg-10">
            @if (!Model.Any())
            {
                <!-- 如果沒有訂單，顯示這條消息 -->
                <div class="alert alert-info" role="alert">
                    沒有訂單。
                </div>
            }
            else
            {
                <!-- 如果有訂單，顯示訂單表格 -->
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().OrdId)</th>
                            <th>@Html.DisplayNameFor(model => model.First().OrdDate)</th>
                            <th>@Html.DisplayNameFor(model => model.First().DateLine)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.OrdId)</td>
                                <td>@Html.DisplayFor(modelItem => item.OrdDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.DateLine)</td>
                                <td>
                                    <button class="btn btn-warning btn-details" data-order-id="@item.OrdId">
                                        明細
                                    </button>
                                    <button class="btn btn-danger btn-delete" data-order-id="@item.OrdId">
                                        取消
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- 詳情模態框 -->
    <div class="modal fade" id="DetailsModal" tabindex="-1" aria-labelledby="DetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="DetailsModalLabel">訂單詳情</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modal-body-content">
                    <!-- 詳情內容會載入到這裡 -->
                </div>
            </div>
        </div>
    </div>

    <!-- 刪除模態框 -->
    <div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="DeleteModalLabel">取消訂單</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modal-delete-body-content">
                    <!-- 刪除內容會載入到這裡 -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).on('click', '.btn-details', function () {
            var orderId = $(this).data('order-id');
            var url = '@Url.Action("OrderDet", "Me")' + '/' + orderId;
            $('#modal-body-content').load(url);
            $('#DetailsModal').modal('show');
        });

        $(document).on('click', '.btn-delete', function () {
            var orderId = $(this).data('order-id');
            var url = '@Url.Action("OrderDel", "Me")' + '/' + orderId;
            $('#modal-delete-body-content').load(url);
            $('#DeleteModal').modal('show');
        });
    </script>
}
