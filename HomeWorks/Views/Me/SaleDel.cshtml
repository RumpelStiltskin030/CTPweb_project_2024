@model HomeWorks.Models.Order

<div class="container mt-4">
    <h3>你確定要取消這筆訂單嗎?</h3>

    <form asp-action="SaleDel" method="post" class="mt-3">
        <input type="hidden" asp-for="OrdId" />
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-danger" onclick="return confirmDeletion()">確認刪除</button>
            <a href="@Url.Action("Index", "Order")" class="btn btn-secondary ms-2">取消</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function confirmDeletion() {
            return confirm("確定要刪除這筆訂單嗎？此操作無法恢復。");
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
