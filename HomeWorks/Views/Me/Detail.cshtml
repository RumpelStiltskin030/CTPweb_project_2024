@model HomeWorks.ViewModel.memberVM

@{
    ViewData["TEST"] = "test";
}

<div class="container mt-4">
    <div class="row">
        <!-- 側邊選單 -->
        <div class="col-12 col-md-3 col-lg-2">
            @await Html.PartialAsync("~/Views/Shared/view/MeChose.cshtml")
        </div>

        <!-- 會員資訊 -->
        <div class="col-12 col-md-9 col-lg-10">
            <div class="card border-0 rounded-lg shadow-sm">
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="row bg-white rounded-lg shadow-sm">
                                <!-- 會員頭像與基本資訊 -->
                                <div class="col-12 col-lg-3 d-flex justify-content-center align-items-center p-3">
                                    @* 確保在 PhotoPath 為 null 或空時使用預設圖檔 *@
                                    <a target="_blank" class="link-primary d-flex align-items-center justify-content-center" href="@(!string.IsNullOrEmpty(Model.member.PhotoPath) ? Model.member.PhotoPath : "/photo/ready.jpg")">
                                        <img src="@(!string.IsNullOrEmpty(Model.member.PhotoPath) ? Model.member.PhotoPath : "/photo/ready.png")" alt="Member Photo" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                                    </a>
                                </div>
                                <div class="col-12 col-lg-6 d-flex flex-column justify-content-center p-3">
                                    <div class="mb-2">
                                        <span class="font-weight-bold display-4" style="font-size: 1.5rem;">
                                            @Model.member.MeName
                                        </span>
                                    </div>
                                    <div class="small text-muted">
                                        @Model.member.MeEmail
                                        <a class="text-muted ml-1" href="@Url.Action("Edit", "Me")">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-3 d-flex justify-content-center align-items-center p-3">
                                    <a class="btn btn-outline-primary w-100" asp-controller="Me" asp-action="Edit" asp-route-id="@Model.member.MeId">
                                        編輯資料
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
@*                     <div>
                        @await Html.PartialAsync("~/Views/Shared/view/pro.cshtml")
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>
