@model HomeWorks.Models.Member

@{
    ViewData["Title"] = "註冊";
}

<div class="container mt-4">
    <h1 class="mb-4">註冊會員</h1>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="MeName" class="form-label"></label>
                    <input asp-for="MeName" class="form-control" />
                    <span asp-validation-for="MeName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MeTel" class="form-label"></label>
                    <input asp-for="MeTel" class="form-control" />
                    <span asp-validation-for="MeTel" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MeEmail" class="form-label"></label>
                    <input asp-for="MeEmail" class="form-control" />
                    <span asp-validation-for="MeEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MePassword" class="form-label"></label>
                    <input asp-for="MePassword" type="password" class="form-control" />
                    <span asp-validation-for="MePassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <input type="submit" value="註冊" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
